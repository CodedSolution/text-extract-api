#APP_ENV=production # sets the app into prod mode, othervise dev mode with auto-reload on code changes
REDIS_CACHE_URL=redis://localhost:6379/1
DISABLE_LOCAL_OLLAMA=0
REMOTE_API_URL=http://localhost:8002/marker/upload

# CLI settings
OCR_URL=http://localhost:8000/ocr/upload
OCR_UPLOAD_URL=http://localhost:8000/ocr/upload
OCR_REQUEST_URL=http://localhost:8000/ocr/request
RESULT_URL=http://localhost:8000/ocr/result/
CLEAR_CACHE_URL=http://localhost:8000/ocr/clear_cache
LLM_PULL_API_URL=http://localhost:8000/llm_pull
LLM_GENERATE_API_URL=http://localhost:8000/llm_generate

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
OLLAMA_HOST=http://localhost:11434
APP_ENV=development  # Default to development mode

# Performance monitoring
CELERY_SEND_TASK_EVENTS=true
CELERY_TASK_SEND_SENT_EVENT=true

# Default model configuration
DEFAULT_LLM_MODEL=llama3.2-vision:latest
LLAMA_VISION_PROMPT="Extract all visible text from this image exactly as it appears. Do not interpret, summarize, or analyze the content. Only transcribe the text you see, preserving formatting and structure. Output only the extracted text without any commentary or refusal."

STORAGE_PROFILE_PATH=./storage_profiles

# Extended timeout settings for OCR tasks
TASK_TIME_LIMIT=1800  # 30 minutes
TASK_SOFT_TIME_LIMIT=1500  # 25 minutes
RESULT_EXPIRES=3600  # 1 hour

# Performance and memory management
CELERY_WORKER_MAX_MEMORY_PER_CHILD=512000  # 512MB per worker
CELERY_WORKER_MAX_TASKS_PER_CHILD=10  # Restart worker after 10 tasks
CELERY_WORKER_PREFETCH_MULTIPLIER=1  # Process one task at a time
CELERY_TASK_ACKS_LATE=true  # Acknowledge tasks only after completion

# AWS S3
#AWS_ACCESS_KEY_ID=your-access-key-id
#AWS_SECRET_ACCESS_KEY=your-secret-access-key
#AWS_REGION=your-region
#AWS_S3_BUCKET_NAME=your-bucket-name
